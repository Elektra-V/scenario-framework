# OpenAI Configuration (for local testing)
OPENAI_API_KEY=your_openai_api_key_here

# Custom Gateway Configuration (for company environment)
# Uncomment and fill these when using your company gateway:
# USE_CUSTOM_GATEWAY=true
# CUSTOM_GATEWAY_API_KEY=xxxx
# CUSTOM_GATEWAY_BASE_URL=https://genai.iais.fraunhofer.de/api/v2
# GENAI_USERNAME=my-username
# GENAI_PASSWORD=my-password

# Model Configuration
# Each agent can use a DIFFERENT model - this is recommended!
# CUSTOM_MODEL=Llama-3.3-70B-Instruct  # Model for RecipeAgent (agent under test)
# USER_SIMULATOR_MODEL=gpt-4o-mini      # Model for UserSimulatorAgent (fast, cost-effective)
# JUDGE_MODEL=gpt-4o                    # Model for JudgeAgent (better reasoning for evaluation)

# LangWatch Configuration (optional - for visualization)
# LANGWATCH_API_KEY=your_langwatch_api_key_here
# LANGWATCH_ENDPOINT=https://app.langwatch.ai  # Default endpoint, change if using custom instance
